  ],
  "author": "Lamine AZINAKOU",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/agazinakou/genos/issues"
  },
  "homepage": "https://github.com/agazinakou/genos#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.2.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.3"
  },
  "files": [
    "lib/**/*"
